    private void txtApellidoKeyTyped(java.awt.event.KeyEvent evt) {                                     
        int num_caracteres=20;
        char c=evt.getKeyChar();
        if(Character.isDigit(c)){
            getToolkit().beep();
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admite letras" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
        if(txtApellido.getText().length()> num_caracteres){ // solo admite 20 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 20 caracteres");
        }
    }                                    

    private void txtCelularKeyTyped(java.awt.event.KeyEvent evt) {                                    
        int num_caracteres = 9;
        char c= evt.getKeyChar();
        if(Character.isLetter(c)){
            getToolkit().beep();
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admite números" , "Validación", JOptionPane.ERROR_MESSAGE);
        }
        
        if(txtCelular.getText().length()> num_caracteres){ // solo admite 10 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 10 caracteres");
        }
    }                                   

    private void txtDireccionKeyTyped(java.awt.event.KeyEvent evt) {                                      
        int num_caracteres = 55;
        
        if(txtDireccion.getText().length()> num_caracteres){ // solo admite 55 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 55 caracteres");
        }
    }                                     

    private void txtCorreoKeyTyped(java.awt.event.KeyEvent evt) {                                   
        int num_caracteres = 40;
        if(txtCorreo.getText().length()> num_caracteres){ // solo admite 40 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 40 caracteres");
        }
    }                                  

