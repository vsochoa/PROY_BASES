    private void limpiarCampos(){
        txtApellido.setText("");
        txtNombre.setText("");
        txtCI_Ruc.setText("");
        txtCelular.setText("");
        txtCorreo.setText("");
        txtDireccion.setText("");
        jDate.setDate(null);
    }

