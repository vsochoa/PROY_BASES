    private void txtNombreKeyTyped(java.awt.event.KeyEvent evt) {                                   
        int num_caracteres=20;
        char c=evt.getKeyChar();
        if(Character.isDigit(c)){
            getToolkit().beep();
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admite letras" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
        if(txtNombre.getText().length()> num_caracteres){ // solo admite 20 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 20 caracteres");
        }  
    }                                  

    
    private void txtCI_RucKeyTyped(java.awt.event.KeyEvent evt) {                                   
        int num_caracteres = 10;
        char c= evt.getKeyChar();
        if(Character.isLetter(c)){
            getToolkit().beep();
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admite números" , "Validación", JOptionPane.ERROR_MESSAGE);
        }
        
        if(txtCI_Ruc.getText().length()== num_caracteres){ // solo admite 10 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 10 caracteres");
        }
    }                                  

    
    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(txtNombre.getText().equals("")|| txtApellido.getText().equals("")||txtCelular.getText().equals("")||txtCorreo.getText().equals("")||txtDireccion.getText().equals(""))
        {
            JOptionPane.showMessageDialog(null, "Faltan datos", "Error", JOptionPane.ERROR_MESSAGE);
        }
        else
        {
            
        JOptionPane.showMessageDialog(null, "Paciente Registrado", "Confirmación", JOptionPane.INFORMATION_MESSAGE);
        cedula_ref = txtCI_Ruc.getText();
        nombre = txtNombre.getText().toUpperCase()+""+txtApellido.getText().toUpperCase();
        crearUsuarioProcedure();        
        btnOdontograma.setVisible(true);
        btnMateriales.setVisible(true);
        }
        
    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Principal_menu obj = new Principal_menu();
        dispose();
        obj.setVisible(true);
    }                                           

    private void btnMaterialesActionPerformed(java.awt.event.ActionEvent evt) {                                              
        Materiales obj = new Materiales(cedula_ref);
        obj.setVisible(true);
    }                                             

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        limpiarCampos();
    }                                          

    
    public void eliminarQuery(){
    try{
        //eliminarPaciente
        String sql = "DELETE FROM `paciente` WHERE `C.I.`="+txtCI_Ruc.getText();
        sent=cn.createStatement(); //
        int  n = sent.executeUpdate(sql); //executeUpdate
        if(n>0){
            System.out.println("ELIMINADO: "+txtCI_Ruc.getText());
        }
    }
    catch(Exception x){
        System.out.println("Error: "+x.getMessage());
    }
    }
    
    public void buscarPacienteProcedure(){
    try{
        String procedure = "{call buscarPaciente(?)}";
        callablestatement =cn.prepareCall(procedure); //
        
        callablestatement.setInt(1,Integer.parseInt(txtCI_Ruc.getText()));
        callablestatement.executeUpdate();
    }
    catch(Exception x){
        System.out.println("Error: "+x.getMessage());
    }
    }

    
    public void crearUsuarioProcedure(){
        String sx;
        
        //ingresa si es HOMBRE o MUJER
        if (sexo.equals(hombre)){
            sx = "H";
        } else sx = "F";
        
        //Crea formato de la Fecha
        Date date = jDate.getDate();
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
        
        try{
            String procedure = "{call crearPaciente(?,?,?,?,?,?,?,?)}";
            callablestatement =cn.prepareCall(procedure); //

            callablestatement.setString(1,txtCI_Ruc.getText());
            callablestatement.setString(2,txtNombre.getText());
            callablestatement.setString(3,txtApellido.getText());
            callablestatement.setString(4, sx);
            callablestatement.setString(5,sdf.format(date));
            callablestatement.setString(6,txtCelular.getText());
            callablestatement.setString(7,txtDireccion.getText());
            callablestatement.setString(8,txtCorreo.getText());

            callablestatement.executeUpdate();
            System.out.println("Agregado: "+txtNombre.getText() +txtCI_Ruc.getText());
            limpiarCampos();
        }
    catch(Exception x){
        System.out.println("Error: "+x.getMessage());
    }   
    }
    
