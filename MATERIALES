    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        limpiarCampos();
        dispose();
    }                                           

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if( txtCodigo.getText().equals("") || txtNombre.getText().equals("") ||
                txtMarca.getText().equals("") || txtNumero.getText().equals("") ){
            JOptionPane.showMessageDialog(null, "Faltan datos por ingresar.", 
                                                "Error", JOptionPane.ERROR_MESSAGE);
            txtCodigo.requestFocus();
        }else{
            JOptionPane.showMessageDialog(null, "Se ha registrado con exito.", 
                                                "Confirmación", JOptionPane.INFORMATION_MESSAGE);
            limpiarCampos();
        }
    }                                          

    private void txtCodigoKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        int max = 15;
        numeroCaracteres( evt, max, evt.getSource());    
    }                                  

    private void txtNombreKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        int max = 30;
        numeroCaracteres( evt, max, evt.getSource());
    }                                  

    private void txtMarcaKeyTyped(java.awt.event.KeyEvent evt) {                                  
        // TODO add your handling code here:
        int max = 20;
        numeroCaracteres( evt, max, evt.getSource());
    }                                 

    private void txtNumeroKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        int max = 10;
        numeroCaracteres( evt, max, evt.getSource());
    }                                  

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        limpiarCampos();
    }                                          

     //***************************************//
    //***************************************//
    //*********  F U N C I O N E S  *********//  
    //***************************************//
    //***************************************//
    
    private void numeroCaracteres( java.awt.event.KeyEvent evt,  int maximo, Object obj){
        JTextField txt = (JTextField)obj;
        
        if ( txt.getText().length() >= maximo ){
            evt.consume();
            JOptionPane.showMessageDialog(rootPane, "El número máximo de caracteres es "+maximo);
            txt.requestFocus();
        }   
    }
    
    private void limpiarCampos(){
        txtCodigo.setText("");
        txtNombre.setText("");
        txtMarca.setText("");
        txtNumero.setText("");
        txtCodigo.requestFocus();
    }
    
    
