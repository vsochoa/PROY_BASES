    private void txtCodigoKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        int max = 15;
        numeroCaracteres( evt, max, evt.getSource());
    }                                  

    private void txtNombreKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        int max = 30;
        char c = evt.getKeyChar();
        
        if(!Character.isLetter(c)){
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admite letras" , "Validaci√≥n", 
                                                        JOptionPane.INFORMATION_MESSAGE);
        }
        numeroCaracteres( evt, max, evt.getSource());
    }                                  

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        Principal_menu obj = new Principal_menu();
        dispose();
        obj.setVisible(true);
    }                                           

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if( txtCodigo.getText().equals("") || txtNombre.getText().equals("") || txtDescripcion.getText().equals("") ){
            JOptionPane.showMessageDialog(null, "Faltan datos por ingresar.",
                "Error", JOptionPane.ERROR_MESSAGE);
            txtCodigo.requestFocus();
        }else{
            JOptionPane.showMessageDialog(null, "Se ha registrado con exito.",
                "Confirmaci√≥n", JOptionPane.INFORMATION_MESSAGE);
            limpiarCampos();
        }
    }                                          

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        limpiarCampos();
    }                                          

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        Tratamiento obj = new Tratamiento();
        dispose();
        obj.setVisible(true);
    }                                        

    private void txtCodigoActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void txtNombreActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    //***************************************//
    //***************************************//
    //*********  F U N C I O N E S  *********//  
    //***************************************//
    //***************************************//
    
    private void numeroCaracteres( java.awt.event.KeyEvent evt,  int maximo, Object obj){
        JTextField txt = (JTextField)obj;
        
        if ( txt.getText().length() >= maximo ){
            evt.consume();
            JOptionPane.showMessageDialog(rootPane, "El n√∫mero m√°ximo de caracteres es "+maximo);
            txt.requestFocus();
        }   
    }
    
    private void limpiarCampos(){
        txtCodigo.setText("");
        txtNombre.setText("");
        txtValor.setText("");
        txtDescripcion.setText("");
        txtCodigo.requestFocus();
    }
    
