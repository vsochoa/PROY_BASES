    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if( txtSecuencia.getText().equals("") ||
            txtNombre.getText().equals("") || txtCedula_Ruc.getText().equals("") ||
            txtTelefono.getText().equals("") || txtDireccion.getText().equals("") ||
            txtCantidad.getText().equals("") || txtDetalle.getText().equals("") ||
            txtValor.getText().equals("") || txtSubtotal.getText().equals("") ||
            txtDescuencto.getText().equals("") || txtIva.getText().equals("") ||
            txtTotal.getText().equals("") ){
            JOptionPane.showMessageDialog(null, "Faltan datos por ingresar.",
                "Error", JOptionPane.ERROR_MESSAGE);
            txtCantidad.requestFocus();
        }else{
            if( guardarFactura() == 1 ){
                JOptionPane.showMessageDialog(null, "Se ingreso la Factura correctamente",
                "Informativo", JOptionPane.INFORMATION_MESSAGE);
                limpiarCampos();
                cerrarConexion();
            }
        }
    }                                          
    
    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        limpiarCampos();
    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        Principal_menu obj = new Principal_menu();
        obj.setVisible(true);
        cerrarConexion();
        dispose();
    }                                           

    private void txtNombreKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        soloLetras(evt);        
        numeroCaracteres( evt, 30, evt.getSource() );                                
    }                                  

    private void txtCedula_RucKeyTyped(java.awt.event.KeyEvent evt) {                                       
        // TODO add your handling code here:
        soloNumeros(evt);        
        numeroCaracteres( evt, 13, evt.getSource() );  
    }                                      

    private void txtTelefonoKeyTyped(java.awt.event.KeyEvent evt) {                                     
        // TODO add your handling code here:
        soloNumeros(evt);        
        numeroCaracteres( evt, 10, evt.getSource() );                                  
    }                                    

    private void txtDireccionKeyTyped(java.awt.event.KeyEvent evt) {                                      
        // TODO add your handling code here:
        numeroCaracteres( evt, 50, evt.getSource() );                                  
    }                                     

    private void txtCantidadKeyTyped(java.awt.event.KeyEvent evt) {                                     
        // TODO add your handling code here:        
        soloNumeros(evt);        
        numeroCaracteres( evt, 2, evt.getSource() );                       
    }                                    

    private void txtDetalleKeyTyped(java.awt.event.KeyEvent evt) {                                    
        // TODO add your handling code here:
        numeroCaracteres( evt, 30, evt.getSource() );                                
    }                                   

    private void txtValorKeyTyped(java.awt.event.KeyEvent evt) {                                  
        // TODO add your handling code here:
        soloNumeros(evt);
    }                                 

    private void txtNotaKeyTyped(java.awt.event.KeyEvent evt) {                                 
        // TODO add your handling code here:
        numeroCaracteres1( evt, 50, evt.getSource() );
    }                                

    private void txtCedula_RucActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        if( txtCedula_Ruc.getText().length() == 10 || txtCedula_Ruc.getText().length() == 13 ){
            if( txtCedula_Ruc.getText().length() == 10 )
                buscarCedula();
            else{
                JOptionPane.showMessageDialog(null,"Ingresar datos completos para la Factura",
                        "Mensaje del sistema", JOptionPane.WARNING_MESSAGE);
                txtNombre.requestFocus();
            }
        }else{
            JOptionPane.showMessageDialog(null,"Error en el número de CI/RUC: " 
                            + txtCedula_Ruc.getText(),"Mensaje del sistema", JOptionPane.WARNING_MESSAGE);
            limpiarCampos();
        }
    }                                             

    private void txtDetalleActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        calcularValores();
    }                                          

