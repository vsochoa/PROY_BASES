    private void numeroCaracteres( java.awt.event.KeyEvent evt,  int max, Object obj){
        JTextField txt = (JTextField)obj;        
        if ( txt.getText().length() >= max ){
            evt.consume();
            JOptionPane.showMessageDialog(rootPane, "El número máximo de caracteres es "+max);
            txt.requestFocus();
        }   
    }
    
    private void numeroCaracteres1( java.awt.event.KeyEvent evt,  int maximo, Object obj){
        JTextArea txt = (JTextArea)obj;        
        if ( txt.getText().length() >= maximo ){
            evt.consume();
            JOptionPane.showMessageDialog(rootPane, "El número máximo de caracteres es "+maximo);
            txt.requestFocus();
        }   
    }
    
    private void soloNumeros( java.awt.event.KeyEvent evt ){
        char c = evt.getKeyChar(); 
        if(Character.isLetter(c)) { 
              getToolkit().beep(); 
              evt.consume();
              JOptionPane.showMessageDialog(null,"Solo se admite numeros" ,
                      "Validación", JOptionPane.ERROR_MESSAGE);
          }
    }
    
    private void soloLetras( java.awt.event.KeyEvent evt ){
        char c = evt.getKeyChar(); 
        if(Character.isDigit(c)) { 
              getToolkit().beep(); 
              evt.consume(); 
              JOptionPane.showMessageDialog(null,"Solo se admite letras" , 
                      "Validación", JOptionPane.ERROR_MESSAGE);
        }
    }
    
    private void calcularValores(){
        double _cantidad,_valor,_subtotal,_desct,_iva,_total;
        
        _total      = Double.parseDouble(total_fact);
        _subtotal   = _total / 1.12;
        _iva        = _total - _subtotal;
        _desct      = 0;    
        _cantidad   = Double.parseDouble(txtCantidad.getText());
        _valor      = _subtotal / _cantidad ;
        
        txtValor.setText( DoubleFormat(_valor) );
        txtSubtotal.setText( DoubleFormat(_subtotal) );
        txtDescuencto.setText( DoubleFormat(_desct) );
        txtIva.setText( DoubleFormat(_iva) );
        txtTotal.setText( DoubleFormat(_total) );
        
        /*
        _cantidad   = Double.parseDouble(txtCantidad.getText());
        _valor      = Double.parseDouble(txtValor.getText());
        _subtotal   = _cantidad * _valor;
        _desct      = 0;
        _iva        = (_subtotal - _desct) * 0.12;
        _total      = _subtotal + _iva;
        
        txtSubtotal.setText( Double.toString(_subtotal) );
        txtDescuencto.setText( Double.toString(_desct) );
        txtIva.setText( Double.toString(_iva) );
        txtTotal.setText( Double.toString(_total) );
        */
    }
    
    public static String DoubleFormat(double parDouble){
        DecimalFormatSymbols simbolo = new DecimalFormatSymbols();
        simbolo.setDecimalSeparator('.');
        simbolo.setGroupingSeparator(',');
        DecimalFormat formatter = new DecimalFormat("###,##0.00", simbolo); 
        String myNumero = formatter.format(parDouble);
        return myNumero;
    }
    
    private void limpiarCampos(){
        //txtFecha.setText("");
        //txtSecuencia.setText("");
        txtNombre.setText("");
        txtCedula_Ruc.setText("");
        txtTelefono.setText("");
        txtDireccion.setText("");
        txtCantidad.setText("");
        txtDetalle.setText("");
        txtValor.setText("");
        txtSubtotal.setText("");
        txtDescuencto.setText("");
        txtIva.setText("");
        txtTotal.setText("");
        txtNota.setText("");
    }
    
    public int guardarFactura(){
        
        int save = 0;
        Date date = txtdatFecha.getDate();
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");

        try{            
            cn.setAutoCommit(false);
            
            String procedure = "{call InsertarFacturaProcedure(?,?,?,?,?,?,?,?,?,?,?,?,?,?)}";
            callablestatement = cn.prepareCall(procedure);

            callablestatement.setString(1,sdf.format(date));
            callablestatement.setString(2,txtSecuencia.getText());            
            callablestatement.setString(3,txtNombre.getText().toUpperCase());
            callablestatement.setString(4,txtCedula_Ruc.getText());
            callablestatement.setString(5,txtDireccion.getText().toUpperCase());
            callablestatement.setString(6,txtTelefono.getText());
            callablestatement.setInt(7,Integer.parseInt(txtCantidad.getText()));
            callablestatement.setString(8,txtDetalle.getText().toUpperCase());
            callablestatement.setString(9,txtNota.getText().toUpperCase());
            callablestatement.setDouble(10,Double.parseDouble(txtSubtotal.getText()));
            callablestatement.setDouble(11,Double.parseDouble(txtDescuencto.getText()));
            callablestatement.setDouble(12,Double.parseDouble(txtIva.getText()));
            callablestatement.setDouble(13,Double.parseDouble(txtTotal.getText()));
            callablestatement.setInt(14,pago);

            callablestatement.executeUpdate();
            
            save = 1;
            
            cn.commit();
        }catch(SQLException sqle){
            try{
                // Vuelve atras los cambios
                cn.rollback();
            } catch(Exception e){} //Manejo de errores                
            
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                        "Estado de Error: " + sqle.getSQLState() + "\n" + 
                        "Mensaje de Error: " + sqle.getMessage(),
                        "Advertencia", JOptionPane.ERROR_MESSAGE); 
        }
        
        if (save == 1) {
            return( save );
        }
        return( save );
    }
    
    public void buscarCedula(){
        Statement st;
        String [] registros = new String[8];
        String procedure = "{call buscarCIPaciente('" + txtCedula_Ruc.getText() + "')}";    
            
            try {                           
                st = cn.createStatement();
                rs = st.executeQuery(procedure);
                                  
                while ( rs.next() ){
                    registros[0]= rs.getString("CI");
                    registros[1]= rs.getString("Nombre");
                    registros[2]= rs.getString("Apellido");
//                    registros[3]= rs.getString("Sexo");
//                    registros[4]= rs.getString("FNacimiento");
                    registros[5]= rs.getString("Celular");
                    registros[6]= rs.getString("Direccion");
//                    registros[7]= rs.getString("Email");
                }
                if( registros[0] == null ){
                    JOptionPane.showMessageDialog(null,"No se ha encontrado ningun Paciente con CI/RUC: " 
                            + txtCedula_Ruc.getText(),"Mensaje del sistema", JOptionPane.WARNING_MESSAGE);                     
                } else {    
                    txtNombre.setText(registros[1]+" "+registros[2]);
                    txtTelefono.setText(registros[5]);
                    txtDireccion.setText(registros[6]);
                    txtCantidad.requestFocus();
                }
                
            }catch (SQLException sqle){
                JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                        "Estado de Error: " + sqle.getSQLState() + "\n" + 
                        "Mensaje de Error: " + sqle.getMessage(),
                        "Advertencia", JOptionPane.ERROR_MESSAGE);
            }
    }
    
    public void cerrarConexion(){
        try {
            cn.close();
            System.out.println("Desconectado: " + cn.isClosed());  
        } catch (SQLException sqle) {
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                        "Estado de Error: " + sqle.getSQLState() + "\n" + 
                        "Mensaje de Error: " + sqle.getMessage(),
                        "Advertencia", JOptionPane.ERROR_MESSAGE);}
    }
       
