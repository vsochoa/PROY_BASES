    private void numeroCaracteres( java.awt.event.KeyEvent evt,  int maximo, Object obj){
        JTextArea txt = (JTextArea)obj;
        
        if ( txt.getText().length() >= maximo ){
            evt.consume();
            JOptionPane.showMessageDialog(rootPane, "El número máximo de caracteres es "+maximo);
            txt.requestFocus();
        }   
    }
    
    public int guardarpiezaDental(){
        int save = 0;
        
        try{            
            cn.setAutoCommit(false);
            
            String procedure = "{call crearPiezaDentalProcedure(?,?,?,?,?,?,?,?,?)}";
            callablestatement = cn.prepareCall(procedure);

            callablestatement.setInt(1, Integer.parseInt(txtNoPieza.getText()) );
            callablestatement.setString(2,txtDetalle.getText().toUpperCase());            
            callablestatement.setBoolean(3,chboxMesial.isSelected());
            callablestatement.setBoolean(4,chboxDistal.isSelected());
            callablestatement.setBoolean(5,chboxOctusal.isSelected());
            callablestatement.setBoolean(6,chboxPalatino.isSelected());
            callablestatement.setBoolean(7,chboxLingual.isSelected());
            callablestatement.setBoolean(8,chboxVestibular.isSelected());
            callablestatement.setInt(9,odontog);            

            callablestatement.executeUpdate();
            
            save = 1;
            
            cn.commit();
        }catch(SQLException sqle){
            try{   // Vuelve atras los cambios
                cn.rollback();
            } catch(Exception e){} //Manejo de errores                
            
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                        "Estado de Error: " + sqle.getSQLState() + "\n" + 
                        "Mensaje de Error: " + sqle.getMessage(),
                        "Advertencia", JOptionPane.ERROR_MESSAGE); 
        }
        
        if (save == 1) {
            return( save );
        }
        return( save );
    }
    
    public int actualizarpiezaDental(){
        int save = 0;
        
        try{            
            cn.setAutoCommit(false);
            
            String procedure = "{call actualizarPiezaDentalProcedure(?,?,?,?,?,?,?,?,?)}";
            callablestatement = cn.prepareCall(procedure);

            callablestatement.setInt(1, Integer.parseInt(txtNoPieza.getText()) );
            callablestatement.setString(2,txtDetalle.getText().toUpperCase());            
            callablestatement.setBoolean(3,chboxMesial.isSelected());
            callablestatement.setBoolean(4,chboxDistal.isSelected());
            callablestatement.setBoolean(5,chboxOctusal.isSelected());
            callablestatement.setBoolean(6,chboxPalatino.isSelected());
            callablestatement.setBoolean(7,chboxLingual.isSelected());
            callablestatement.setBoolean(8,chboxVestibular.isSelected());
            callablestatement.setInt(9,odontog);            

            callablestatement.executeUpdate();
            
            save = 1;
            
            cn.commit();
        }catch(SQLException sqle){
            try{   // Vuelve atras los cambios
                cn.rollback();
            } catch(Exception e){} //Manejo de errores                
            
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                        "Estado de Error: " + sqle.getSQLState() + "\n" + 
                        "Mensaje de Error: " + sqle.getMessage(),
                        "Advertencia", JOptionPane.ERROR_MESSAGE); 
        }
        
        if (save == 1) {
            return( save );
        }
        return( save );
    }
    
    public void limpiarCampos(){
        cboCaraDent.setSelectedIndex(0);
        txtDetalle.setText("");
    }
    
    public void enableChBox( boolean state ){
        chboxDistal.setEnabled(state);
        chboxLingual.setEnabled(state);
        chboxMesial.setEnabled(state);
        chboxOctusal.setEnabled(state);
        chboxPalatino.setEnabled(state);
        chboxVestibular.setEnabled(state);
    }
    
    public void selectChBox( boolean state ){
        chboxDistal.setSelected(state);
        chboxLingual.setSelected(state);
        chboxMesial.setSelected(state);
        chboxOctusal.setSelected(state);
        chboxPalatino.setSelected(state);
        chboxVestibular.setSelected(state);
    }
    
    public void cerrarConexion(){
        try {
            cn.close();
            System.out.println("Desconectado: " + cn.isClosed());  
        } catch (SQLException sqle) {
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                        "Estado de Error: " + sqle.getSQLState() + "\n" + 
                        "Mensaje de Error: " + sqle.getMessage(),
                        "Advertencia", JOptionPane.ERROR_MESSAGE);}
    }

