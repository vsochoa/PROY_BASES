    private void cboCaraDentActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        if(cboCaraDent.getSelectedIndex() == 0){
            enableChBox(false);
            selectChBox(true);
        }else{
            enableChBox(true);
            selectChBox(false);
        }
    }                                           

    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        if ( txtDetalle.getText().equals("") ){
            JOptionPane.showMessageDialog(null, "Faltan datos por ingresar.",
                "Error", JOptionPane.ERROR_MESSAGE);
            txtDetalle.requestFocus();
        }else{
            if( isActivo == 0 ){
                if( guardarpiezaDental() == 1 ){
                    JOptionPane.showMessageDialog(null, "Se ingreso el registro correctamente",
                    "Informativo", JOptionPane.INFORMATION_MESSAGE);
                    limpiarCampos();
                    cerrarConexion();
                    dispose();                
                }
            } else{
                if( actualizarpiezaDental() == 1 ){
                    JOptionPane.showMessageDialog(null, "Se actualizo el registro correctamente",
                    "Informativo", JOptionPane.INFORMATION_MESSAGE);
                    limpiarCampos();
                    cerrarConexion();
                    dispose();                
                }
            }
        }
    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        cerrarConexion();
        dispose();        
    }                                           

    private void txtDetalleKeyTyped(java.awt.event.KeyEvent evt) {                                    
        // TODO add your handling code here:
        numeroCaracteres( evt, 256, evt.getSource() );
    }                                   

