    private void txtNombreKeyTyped(java.awt.event.KeyEvent evt) {                                   
        // TODO add your handling code here:
        int num_caracteres=20;
        char c=evt.getKeyChar();
        if(Character.isDigit(c)){
            getToolkit().beep();
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admite letras" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
        if(txtNombre.getText().length()> num_caracteres){ // solo admite 20 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 20 caracteres");
        }
    }                                  

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Consulta obj= new Consulta();
        dispose();
        obj.setVisible(true);
        
        
    }                                           

    
    public void crearTratamientoProcedure(){
     
        try{
        String procedure = "{call crearTratamiento(?,?,?)}";
        String nombre = txtNombre.getText().toUpperCase();
        callablestatement =cn.prepareCall(procedure); //
        
        callablestatement.setString(1,nombre);
        callablestatement.setDouble(2,Double.parseDouble(txtPrecioInicial.getText()));
        callablestatement.setString(3, txtDescripcion.getText());
        
        callablestatement.executeUpdate();
            System.out.println(" Tratamiento Agregado: "+txtNombre.getText());
    }
    catch(Exception x){
        System.out.println("Error: "+x.getMessage());
    }   
    
    }
    
    
    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           

        if( txtNombre.getText().equals("") || txtDescripcion.getText().equals("") ){
            JOptionPane.showMessageDialog(null, "Faltan datos por ingresar.",
                "Error", JOptionPane.ERROR_MESSAGE);
        }
        else{
            
        
            
            String sql= ("Select Nombre from tratamiento where Nombre= '" + txtNombre.getText().toUpperCase() + "'");
            String name = null;            
                try {
                
                java.sql.Statement st1= cn.createStatement();
                ResultSet rs1= st1.executeQuery(sql); 
                while (rs1.next()){
                 name = (rs1.getString("Nombre"));
                 //System.out.println(name);
                }
                
                        if (name!=null) {
                            JOptionPane.showMessageDialog(null, "Tratamiento ya existe!!!", "ERROR", JOptionPane.ERROR_MESSAGE);
                        }
                        else{
                            JOptionPane.showMessageDialog(null, "Se ha registrado con exito.","Confirmación", JOptionPane.INFORMATION_MESSAGE);
                            crearTratamientoProcedure();
                            limpiarCampos();
                            dispose();            
                            Consulta obj= new Consulta();
                            obj.setVisible(true);
                        }
                }
                catch(Exception x){
                System.out.println("Error: "+x.getMessage());
                JOptionPane.showMessageDialog(null, "No existen tratamientos", "ERROR", JOptionPane.ERROR_MESSAGE);

                }
                }
    }                                          

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        limpiarCampos();
    }                                          

