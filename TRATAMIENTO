    private void txtPrecioInicialKeyTyped(java.awt.event.KeyEvent evt) {                                          
        // TODO add your handling code here:
        int num_caracteres=7;
        int totalcaracteres = txtPrecioInicial.getText().length();
        int decimal = totalcaracteres - 2;
        char c=evt.getKeyChar();
             
        
        if(Character.isLetter(c)){
            getToolkit().beep();
            evt.consume();    
            JOptionPane.showMessageDialog(null,"No se admiten letras" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
        
        /*if( c == '.'){
            int pos=evt.getKeyLocation();  
        if(txtPrecioInicial.getText().length() > pos+2){
            evt.consume();    
            JOptionPane.showMessageDialog(null,"Solo se admiten 2 decimales" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
        }*/
        
        if(txtPrecioInicial.getText().length()> num_caracteres){ // solo admite 20 caracteres
            evt.consume();
            JOptionPane.showMessageDialog(rootPane,"Solo 7 caracteres");
        }
    }                                         

    private void limpiarCampos(){
        txtNombre.setText("");
        txtPrecioInicial.setText("");
        txtDescripcion.setText("");
    }
    
    
