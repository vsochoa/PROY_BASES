    }                                              

    private void button_guardarActionPerformed(java.awt.event.ActionEvent evt) {                                               
                // TODO add your handling code here:
        if( txt_id_sesion.getText().equals("") || txt_total_pago.getText().equals("") ){
            JOptionPane.showMessageDialog(null, "Faltan datos por ingresar.",
                "Error", JOptionPane.ERROR_MESSAGE);
            txt_id_sesion.requestFocus();
        }else{
            JOptionPane.showMessageDialog(null, "Se ha registrado con exito.",
                "Confirmación", JOptionPane.INFORMATION_MESSAGE);
            limpiarCampos();
        }
    }                                              

    private void txt_id_sesionActionPerformed(java.awt.event.ActionEvent evt) {                                              
        
    }                                             

    private void txt_id_sesionKeyTyped(java.awt.event.KeyEvent evt) {                                       
        char c= evt.getKeyChar();
        if(!Character.isDigit(c)){
        evt.consume();    
        JOptionPane.showMessageDialog(null,"Solo se admite números" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
    }                                      

    private void txt_total_pagoKeyTyped(java.awt.event.KeyEvent evt) {                                        
        char c= evt.getKeyChar();
        if(!Character.isDigit(c)){
        evt.consume();    
        JOptionPane.showMessageDialog(null,"Solo se admite números" , "Validación", JOptionPane.INFORMATION_MESSAGE);
        }
    }                                       

    private void button_cancelarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        Principal_menu obj = new Principal_menu();
        dispose();
        obj.setVisible(true);
    }                                               

