    private void btnReporteActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        try {
            Reportes re = new Reportes();
            re.reporteFacturas("PAGO");
        }catch (JRException ex) {
            JOptionPane.showMessageDialog(null, "Error en Informe: " + ex.getMessage(),
                "ERROR", JOptionPane.ERROR_MESSAGE);
        }catch (SQLException sqle) {
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                "Estado de Error: " + sqle.getSQLState() + "\n" +
                "Mensaje de Error: " + sqle.getMessage(),
                "Advertencia", JOptionPane.ERROR_MESSAGE);
        }
    }                                          

    private void btnBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        cargarPagos();
    }                                         

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
            Principal_menu obj= new Principal_menu();
            dispose();
            obj.setVisible(true);
    }                                           

    //***************************************//
    //***************************************//
    //*********  F U N C I O N E S  *********//  
    //***************************************//
    //***************************************//
    
    public void cargarPagos(){
        Date f_ini = txtdatInicio.getDate();
        Date f_fin = txtdatFin.getDate();
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
        Statement st;
        ResultSet rs;
        
        String [] titulos = {"Fecha Sesion","Tratamiento","Fecha Pago","Tipo Pago","Valor"};
        String [] registros = new String[8];
        
        String sql1 = "call InformePagosProcedure('" + sdf.format(f_ini) + "','" + sdf.format(f_fin) + "')";
        modelo = new DefaultTableModel(null, titulos);
        
        try {
            st = cn.createStatement();
            rs = st.executeQuery(sql1);
            
            while (rs.next()) {
                registros[0]= rs.getString("Fecha_Sesion");
                registros[1]= rs.getString("Tratamiento");
                registros[2]= rs.getString("Fecha_Pago");
                registros[3]= rs.getString("FormaPago");
                registros[4]= rs.getString("Valor");
                modelo.addRow(registros);
                tblPagos.setModel(modelo);                
            }
        } catch (SQLException sqle) {
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                    "Estado de Error: " + sqle.getSQLState() + "\n" + 
                    "Mensaje de Error: " + sqle.getMessage(),
                    "Advertencia", JOptionPane.ERROR_MESSAGE);
        }
    }
    
