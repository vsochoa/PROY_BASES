    private void btnBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        cargarFacturas();
    }                                         

    private void btnReporteActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        try {
            Reportes re = new Reportes();
            re.reporteFacturas("FACTURA");
        }catch (JRException ex) {
            JOptionPane.showMessageDialog(null, "Error en Informe: " + ex.getMessage(),
                "ERROR", JOptionPane.ERROR_MESSAGE);
        }catch (SQLException sqle) {
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                    "Estado de Error: " + sqle.getSQLState() + "\n" + 
                    "Mensaje de Error: " + sqle.getMessage(),
                    "Advertencia", JOptionPane.ERROR_MESSAGE);
        }
    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        Principal_menu obj = new Principal_menu();
        dispose();
        obj.setVisible(true);
    }                                           

    private void txtRucKeyTyped(java.awt.event.KeyEvent evt) {                                
        // TODO add your handling code here:
        soloNumeros(evt);        
        numeroCaracteres( evt, 13, evt.getSource() ); 
    }                               

    //***************************************//
    //***************************************//
    //*********  F U N C I O N E S  *********//  
    //***************************************//
    //***************************************//
    
    private void numeroCaracteres( java.awt.event.KeyEvent evt,  int max, Object obj){
        JTextField txt = (JTextField)obj;        
        if ( txt.getText().length() >= max ){
            evt.consume();
            JOptionPane.showMessageDialog(rootPane, "El número máximo de caracteres es "+max);
            txt.requestFocus();
        }   
    }
    
    private void soloNumeros( java.awt.event.KeyEvent evt ){
        char c = evt.getKeyChar(); 
        if(Character.isLetter(c)) { 
              getToolkit().beep(); 
              evt.consume();
              JOptionPane.showMessageDialog(null,"Solo se admite numeros" ,
                      "Validación", JOptionPane.ERROR_MESSAGE);
          }
    }    
    
    public void cargarFacturas(){
        Date f_ini = txtdatInicio.getDate();
        Date f_fin = txtdatFin.getDate();
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
        Statement st;
        ResultSet rs;
        
        String [] titulos = {"Fecha","Secuencia","Nombre","CI/RUC","Subtotal","Descuento","IVA","Total"};
        String [] registros = new String[8];
        
        String sql1 = "call InformeFacturasProcedure('" + sdf.format(f_ini) + "','" + sdf.format(f_fin) + 
                                        "','" + txtRuc.getText() + "')";
        modelo = new DefaultTableModel(null, titulos);
        
        try {
            st = cn.createStatement();
            rs = st.executeQuery(sql1);
                        
            while ( rs.next() ) {
                registros[0]= rs.getString("Fecha");
                registros[1]= rs.getString("Secuencia");
                registros[2]= rs.getString("Nombre");
                registros[3]= rs.getString("CI_RUC");
                registros[4]= rs.getString("Subtotal");
                registros[5]= rs.getString("Descuento");
                registros[6]= rs.getString("IVA");
                registros[7]= rs.getString("Total");
                modelo.addRow(registros);
                tblFacturas.setModel(modelo);                
            }
        } catch (SQLException sqle) {
            JOptionPane.showMessageDialog(null, "Código de Error: " + sqle.getErrorCode() + "\n" +
                    "Estado de Error: " + sqle.getSQLState() + "\n" + 
                    "Mensaje de Error: " + sqle.getMessage(),
                    "Advertencia", JOptionPane.ERROR_MESSAGE);
        }
    }
        
    
